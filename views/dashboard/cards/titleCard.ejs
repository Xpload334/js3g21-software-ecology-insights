<div class="card">
    <h1 class="card-header text-center">
        {{repoData.name || "[UNDEFINED]"}}
    </h1>
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <div v-if="state === 'stats'">
                    <a class="nav-link active" aria-current="true">Stats</a>
                </div>
                <div v-else>
                    <a class="nav-link" aria-current="true" @click="setStateStats" :disabled="isLoading">Stats</a>
                </div>
            </li>
            
            <li class="nav-item">
                <div v-if="state === 'contributors'">
                    <a class="nav-link active" aria-current="true">Commits</a>
                </div>
                <div v-else>
                    <a class="nav-link" aria-current="true" @click="setStateCommits" :disabled="isLoading">Contributors</a>
                </div>
<!--                <a class="nav-link" @click="setStateContributors" :disabled="isLoading">Contributors</a>-->
            </li>
        </ul>
    </div>
    <div class="card-body">
        <p class="card-text">{{repoData.description || "[UNDEFINED]"}}</p>
        <a :href="repoData.html_url" class="btn btn-primary">See On GitHub</a>
    </div>
</div>