<!-- repoSearch.ejs -->
<h3 class="text-center mt-5">Search for Repos</h3>


<div class="col-md-8 mx-auto">
    <form id="gitHubForm" class="form-inline mx-auto" style="width: 300px" @submit.prevent="getReposByUsername">
        <input v-model="username" id="usernameInput" class="form-control mb-5" type="text" name="username" placeholder="GitHub Username">
        <input type="submit" class="btn btn-primary ml-2 mb-5" value="Submit">
    </form>
    
    <%- include('searchPagination') %>
    <button @click="displaySearchResults()" class="btn btn-primary mt-2" :disabled="isLoading">
        Reload
    </button>
    
    <div id="scrollPane" class="scroll-pane overflow-auto">
        <ul id="resultList" class="repo-list">
            <!-- Result list items will be dynamically added here -->
        </ul>
    </div>
</div>


